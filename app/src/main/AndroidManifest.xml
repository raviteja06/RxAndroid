<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="demo.rxandroid"
    tools:ignore="MissingLeanbackLauncher,MissingLeanbackSupport">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ObserverPatternActivity"
            android:label="@string/title_activity_observer_pattern"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.MainActivity" />
        </activity>
        <activity
            android:name=".FutureActivity"
            android:label="@string/title_activity_future"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.MainActivity" />
        </activity>
        <activity
            android:name=".FunStartsHereActivity"
            android:label="@string/title_activity_fun_starts_here"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.MainActivity" />
        </activity>
        <activity
            android:name=".SubscribeOnActivity"
            android:label="@string/title_activity_rx_example1"
            android:parentActivityName=".FunStartsHereActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.FunStartsHereActivity" />
        </activity>
        <activity
            android:name=".RxBusActivity"
            android:label="@string/title_activity_rx_bus"
            android:parentActivityName=".FunStartsHereActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.FunStartsHereActivity" />
        </activity>
        <activity
            android:name=".BindingActivity"
            android:label="@string/title_activity_binding"
            android:parentActivityName=".FunStartsHereActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.FunStartsHereActivity" />
        </activity>
        <activity
            android:name=".RxExampleActivity"
            android:label="@string/title_activity_rx_example"
            android:parentActivityName=".FunStartsHereActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.FunStartsHereActivity" />
        </activity>
        <activity
            android:name=".RetrofitActivity"
            android:label="@string/title_activity_retrofit"
            android:parentActivityName=".FunStartsHereActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="demo.rxandroid.FunStartsHereActivity" />
        </activity>
    </application>

</manifest>